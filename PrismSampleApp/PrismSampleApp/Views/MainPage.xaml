<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrismSampleApp.Views.MainPage"
             Title="Main Page">

    <StackLayout VerticalOptions="Center"
               Spacing="30">
        <Button Text="Go To ViewAPage"
            Command="{Binding NavigateToACommand}"
            CommandParameter="/NavigationPage/ViewAPage"/>
        <Button Text="Go To ViewBPage"
            Command="{Binding NavigateToBCommand}"
            CommandParameter="/NavigationPage/ViewAPage/ViewBPage"/>
        <Button Text="Go To ViewCPage"
            Command="{Binding NavigateToCCommand}"
            CommandParameter="/NavigationPage/ViewAPage/ViewBPage/ViewCPage"/>
    </StackLayout>



</ContentPage>