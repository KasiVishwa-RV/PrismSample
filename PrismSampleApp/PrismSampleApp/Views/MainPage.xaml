<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="PrismSampleApp.Views.MainPage"
             Title="Main Page">

    <StackLayout VerticalOptions="Center"
               Spacing="30">
        <Button Text="Go To ViewAPage"
            Command="{Binding NavigateToACommand}"
            CommandParameter="/NavigationPage/ViewAPage"/>
        <Button Text="Go To ViewBPage"
            Command="{Binding NavigateToBCommand}"
            CommandParameter="/NavigationPage/ViewAPage/ViewBPage"/>
        <Button Text="Go To ViewCPage"
            Command="{Binding NavigateToCCommand}"
            CommandParameter="/NavigationPage/ViewAPage/ViewBPage/ViewCPage"/>
        <Label Text="HeaderText" HorizontalTextAlignment="Center" FontSize="36" TextColor="White"/>
        <Label Text="BodyText" FontSize="Title" Padding="30,10,30,10" TextColor="White"/>
        <Picker ItemsSource="{Binding SupportedLanguage}"
              ItemDisplayBinding="{Binding Name}"
              SelectedItem="{Binding SelectedLanguage}" />

        <Button Text="Save"
              Command="{Binding ChangeLanguageCommand}" />
    </StackLayout>



</ContentPage>